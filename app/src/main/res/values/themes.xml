<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Studtravel" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <!-- System bars color. -->
        <item name="android:statusBarColor">@color/background_accent_main</item>
        <item name="android:navigationBarColor">@color/background_accent</item>

        <item name="colorButtonNormal">@color/button_main_background</item>
        <item name="android:positiveButtonText">@color/white</item>
    </style>
</resources>
